package controllStatement;

public class IfTask {
   public static void main(String[] args) {
//      사용자에게 아래의 메뉴를 출력하고
//      번호를 입력받는다.
      
//      1. 빨간색
//      2. 검은색
//      3. 노란색
//      4. 흰색
	   System.out.println("1. 빨간색\n2. 검은색\n3. 노란색\n4. 흰색");

//      사용자가 입력한 번호의 색상을 영어로 출력한다.
      
      
      
   }
}











