package operTest;

import java.util.Collection;
import java.util.Scanner;

public class Oper3 {
	public static void main(String[] args) {
//		사용자에게 키를 입력받고
//		정수라면 정수로 출력
//		실수라면 실수로 출력
//		예) 183 -> 183 출력
//			183.5 -> 183.5 출력
//		삼항 연산자를 사용!
		double num = 0;
		int numInt = 0;
		boolean tof = false;
		String result = null;
		
		Scanner sc = new Scanner(System.in);
		num = Double.parseDouble(sc.next());
		System.out.println(1);
		numInt = (int)num;
		System.out.println(2);
		tof = num - numInt == 0;
		System.out.println(3);
//		System.out.printf("%d",(int)num);
		result = tof ? "결괏값1 : %d" : "결괏값2 : %.1f";
		System.out.printf(result, tof ? Integer.parseInt(numInt) : num);
		
	}
}
//132.2 - 132 = 0.2