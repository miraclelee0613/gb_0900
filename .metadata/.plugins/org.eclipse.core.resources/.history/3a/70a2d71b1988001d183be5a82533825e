package operTest;

import java.util.Scanner;

public class Oper3 {
	public static void main(String[] args) {
//		사용자에게 키를 입력받고
//		정수라면 정수로 출력
//		실수라면 실수로 출력
//		예) 183 -> 183 출력
//			183.5 -> 183.5 출력
//		삼항 연산자를 사용!
		double numDouble = 0;
		int numInt = 0;
		boolean tof = false;
		String result = null, result2;
		
		Scanner sc = new Scanner(System.in);
		numDouble = Double.parseDouble(sc.next());
		numInt = Integer.parseInt("" + numDouble);
		tof = numDouble - numInt > 0;
		result2 = tof ? "%d" : "%f";
		result = tof ? "" + numDouble : "" + numInt;
		System.out.printf(result2, result);
//		 ? ("%d",  :  Integer.parseInt("" + (int)num));
		
	}
}
//132.2 - 132 = 0.2